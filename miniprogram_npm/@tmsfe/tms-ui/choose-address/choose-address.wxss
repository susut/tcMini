:host {
  height: 100%;
}
.bg {
  position: absolute;
  height: 98rpx;
  width: 100%;
}
.wrap {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  padding: 0 40rpx;
}
.tip {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #eff6ff;
  color: #84b0ff;
  font-size: 26rpx;
}
.tip .content {
  margin-left: 40rpx;
}
.tipclose {
  position: absolute;
  top: 0;
  right: 0;
  margin: 25rpx 40rpx 25rpx;
  width: 22rpx;
  height: 22rpx;
}
.top {
  z-index: 100;
}
.wechat {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 22rpx;
  height: 100rpx;
  background: #3f82ff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 22rpx 0 rgba(0, 0, 0, .02);
}
.wechat .icon {
  margin-right: 12rpx;
  width: 48rpx;
  height: 48rpx;
}
.wechat .content {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}
.guid-tips {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
.container {
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  border: 1rpx solid rgba(0, 0, 0, .08);
  box-shadow: 0 4rpx 22rpx 0 rgba(0, 0, 0, .02);
  background-color: #fff;
}
.item {
  display: flex;
  flex-direction: row;
  margin: 0 40rpx;
  padding: 28rpx 0;
  height: 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .08);
  font-size: 28rpx;
}
.item.bottom {
  height: 70rpx;
  border: 0;
}
.item.bottom .input-multiline {
  padding: 0;
  height: 80rpx;
  vertical-align: top;
  white-space: pre-wrap;
  flex-grow: 1;
  text-overflow: ellipsis;
  line-height: 40rpx;
}
.item.bottom.iPhoneStyle .input-multiline {
  margin: -14rpx 0 0 -10rpx;
  height: 90rpx;
}
.item .key {
  flex-shrink: 0;
  width: 168rpx;
  color: #333;
  font-size: 30rpx;
}
.item .value {
  flex-grow: 1;
  text-overflow: ellipsis;
  font-size: 30rpx;
}
.holder {
  color: #ccc;
}
.area {
  position: relative;
  padding-right: 70rpx;
}
.area .key {
  flex-shrink: 0;
}
.area .pickerWrap {
  flex-grow: 1;
  overflow: hidden;
}
.area .picker {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.area .icon {
  position: absolute;
  top: 24rpx;
  right: 0;
  width: 48rpx;
  height: 48rpx;
}
.save {
  margin: 0 20rpx 40rpx;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  font-size: 32rpx;
  color: #fff;
}
.save.ipx {
  margin-bottom: 108rpx;
}
.cansave {
  background: #4084ff;
}
.cantsave {
  background: #b2ceff;
}
