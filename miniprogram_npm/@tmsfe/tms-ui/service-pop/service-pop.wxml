<view class="pop" wx:if="{{showPop}}">
  <view class="title">遇到了问题?</view>
  <button class="service" bindtap="onClickFeedBack" data-type="contact" open-type="contact">
    <image class="service-icon" mode="aspectFit" src="https://static.img.tai.qq.com/mp/common/sevicepop-call.png" />
    <text>联系客服</text>
  </button>
  <view class="problem" bindtap="onClickProblem">
    <image class="service-icon" mode="aspectFit" src="https://static.img.tai.qq.com/mp/common/sevicepop-ques.png" />
    <text>常见问题</text>
  </view>
  <image class="close" bindtap="close" src="https://static.img.tai.qq.com/mp/common/sevicepop-close.png" />
</view>
