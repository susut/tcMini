.nav-container.float {
  position: fixed;
  z-index: 99;
}
.nav-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
}
.nav-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 99;
}
.left-capsule-wrapper {
  position: absolute;
  top: 0;
  left: 24rpx;
  bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
.left-capsule {
  height: 64rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.left-capsule.multiple {
  padding-left: 12rpx;
  padding-right: 12rpx;
}
.capsule-visible .left-capsule {
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, .5);
  border: 1rpx solid rgba(0, 0, 0, .15);
}
.light .capsule-visible .left-capsule {
  background-color: rgba(0, 0, 0, .15);
  border-color: rgba(255, 255, 255, .15);
}
.btn-wrapper {
  position: relative;
  width: 64rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.back-btn {
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}
.back-btn::after {
  display: none;
}
.multiple .btn-wrapper:first-child {
  margin-right: 10rpx;
}
.multiple .btn-wrapper:last-child {
  margin-left: 8rpx;
}
.multiple .btn-wrapper:first-child::after {
  content: "";
  display: block;
  position: absolute;
  width: 1rpx;
  right: -10rpx;
  top: 12rpx;
  bottom: 12rpx;
  background-color: rgba(0, 0, 0, .15);
}
.light .multiple .btn-wrapper:first-child::after {
  background-color: rgba(255, 255, 255, .15);
}
.btn-wrapper .icon {
  width: 40rpx;
  height: 40rpx;
}
.nav .title {
  font-size: 34rpx;
  font-weight: bold;
  justify-self: center;
  max-width: 45vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
