.container {
  color: #333;
  font-size: 28rpx;
}

/* 头部输入框 */
.head {
  height: 116rpx;
  padding: 20rpx 30rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.query {
  position: relative;
  width: 598rpx;
  height: 76rpx;
  border-radius: 16rpx;
  background-color: #f6f7fb;
  display: flex;
  align-items: center;
}
.city {
  width: 146rpx;
  height: 36rpx;
  border-right: 1rpx solid rgba(51, 51, 51, .1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.arrow {
  margin-left: 12rpx;
  margin-top: 2rpx;
  width: 16rpx;
  height: 16rpx;
}
.input-box {
  margin-left: 18rpx;
  flex-grow: 1;
}
.input-box-tip {
  color: rgba(51, 51, 51, .3);
}
.clear {
  margin-right: 12rpx;
  width: 50rpx;
  height: 50rpx;
}
.clear-icon {
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.cancel {
  margin-left: 24rpx;
  width: 68rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
}

/* poi 列表 */
.candidates {
  position: absolute;
  top: 116rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}
.poi {
  position: relative;
  width: 100%;
  height: 136rpx;
  display: flex;
  align-items: flex-start;
}
.poi:first-child {
  margin-top: 6rpx;
}
.poi:not(:last-child)::after,
.history-queries .poi:last-child::after {
  content: "";
  display: block;
  position: absolute;
  left: 94rpx;
  right: 34rpx;
  bottom: 0;
  height: 2rpx;
  background-color: rgba(0, 0, 0, .06);
}
.poi-icon {
  width: 36rpx;
  height: 36rpx;
  margin: 52rpx 18rpx auto 32rpx;
  flex-shrink: 0;
}
.info {
  margin-top: 30rpx;
  padding-right: 34rpx;
  overflow: hidden;
}
.name,
.addr {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.name {
  font-size: 30rpx;
  line-height: 42rpx;
}
.highlight {
  color: #4a89ff;
}
.addr {
  margin-top: 4rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #5e5e63;
}

/* 历史记录 */
.history {
  position: relative;
}
.delete {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 30rpx;
  top: 18rpx;
}
.history-queries::after {
  content: "";
  display: block;
  width: 0;
  height: 0;
  clear: both;
}
.history-query {
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  height: 60rpx;
  max-width: 690rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  background-color: #f6f7fb;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.clear-history {
  padding: 32rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
  text-align: center;
}
