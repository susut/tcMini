.wrap {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 2;
  background-color: #fff;
}
.comment {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 40rpx 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #00266c;
  background-image: linear-gradient(to right, #e5efff, 46%, #ddeaff);
}
.content {
  height: 100%;
  background: linear-gradient(rgba(247, 248, 250, .3), #f7f8fa, #f7f8fa, rgba(247, 248, 250, .3));
}
.static {
  margin: 0 40rpx;
  padding-bottom: 72rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #fff;
}
.static .icon {
  display: block;
  margin: 0 auto;
  width: 192rpx;
  height: 192rpx;
}
.static .title {
  margin-top: 4rpx;
  line-height: 56rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}
.static .sub-title {
  margin-top: 4rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.static .title.vice {
  margin-bottom: 30rpx;
}
.static .sub-title.vice {
  margin-top: 0;
  line-height: 48rpx;
  font-size: 24rpx;
}
.static .actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 72rpx 112rpx 0;
  font-size: 28rpx;
}
.static .act {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.dynamic .icon {
  display: block;
  width: 88rpx;
  height: 88rpx;
  margin-right: 12rpx;
}
.static .act .icon {
  display: block;
  width: 52rpx;
  height: 52rpx;
  margin-right: 8rpx;
}
.vborder {
  width: 1rpx;
  height: 38rpx;
  background-color: rgba(0, 0, 0, .08);
}
.static .buttons {
  display: flex;
  justify-content: space-between;
  margin: 106rpx 32rpx 0;
}
.buttons .btn {
  flex: .5;
  margin: 0 auto;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #4a88f5;
  border: 2rpx solid rgba(90, 151, 249, .67);
  border-radius: 42rpx;
}
.buttons .btn:not(:last-child) {
  margin-right: 27rpx;
}

/* 普通单行运营位 */
.dynamic {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 32rpx 40rpx 0;
  padding: 44rpx 34rpx;
  border-radius: 8rpx;
  background-color: #fff;
  background-size: 100% 100%;
}
.dynamic .desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dynamic .title {
  line-height: 42rpx;
  font-size: 30rpx;
  color: #333;
}
.dynamic .sub-title {
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999;
}
.dynamic .btn {
  width: 144rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
  color: #fff;
  background-color: #f97c5a;
}

/* 大运营位 */
.dynamic.big {
  padding: 30rpx 32rpx 40rpx;
}
.dynamic.big .desc {
  flex-direction: column;
  flex-grow: 1;
}
.dynamic.big .icon {
  margin-top: 40rpx;
  margin-right: 0;
  width: 606rpx;
  height: 606rpx;
  order: 1;
}
.dynamic.big .slogan {
  text-align: center;
}
.dynamic.big .title {
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
}
.dynamic.big .sub-title {
  margin-top: 4rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.dynamic.big .btn {
  display: none;
}
.banners {
  margin-top: 32rpx;
}
.hover {
  opacity: .7;
}
.ani {
  animation: 1.2s linear 0s infinite alternate scale;
}
.top-fill {
  height: 22rpx;
}
.bottom-fill {
  height: 56rpx;
}

@keyframes scale {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(.9);
  }
  100% {
    transform: scale(1);
  }
}
